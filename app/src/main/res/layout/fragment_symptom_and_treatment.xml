<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
android:padding="8dp"
tools:context=".SymptomAndTreatmentFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/gifbg"
        android:orientation="horizontal">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif_fever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/light_fever" />
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif_cough"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/light_cough" />
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif_tiredness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/light_tiredness" />
    </LinearLayout>
<ExpandableListView
    android:id="@+id/expandable_list_view"
    android:padding="5dp"
    android:layoutDirection="rtl"
    android:divider="@null"
    android:scrollbars="none"
    android:childDivider="#00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
</LinearLayout>